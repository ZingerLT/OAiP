*//11.	Ввести M и N и матрицу X[M][N] коротких целых чисел.Разработать программу поворота матрицы на б) 270˚.
#include <stdio.h>
#include <stdlib.h>        // подключение необходимых библиотек
#include <Windows.h>
int main()
{
	system("chcp 1251>0"); // включение русского языка в консоль
	int M, N; //объявление переменных
	printf("Введите значение переменной M:"); //вывод строки в консоль
	scanf_s("%d", &M); // ввод значения М с клавиатуры
	printf("Введите значение переменной N:"); //вывод строки в консоль
	scanf_s("%d", &N); // ввод значения М с клавиатуры
	int *a; // объявление указалеля а
	a = (int*)malloc(N*M *sizeof(int)); // выделение памяти для матрицы
	int i, j, count = 0; // объявление переменных
	printf("Заданная матрица:\n"); //вывод строки в консоль
	for (i = 0; i < M; i++) // процесс заполнения заданной матрицы
	{
		for (j = 0; j < N; j++) 
		{
			count++;
			*(a + M*i + j) = count; 
			printf("%3d", *(a + M*i + j)); // вывод матрицы в консоль
		}
		printf("\n");
	}
	printf("Полученная матрица:\n"); //вывод строки в консоль
	int *mt;// объявление указалеля mt
	mt = (int*)malloc(N*M * sizeof(int));// выделение памяти для матрицы
	int k = M - 1;//объявление переменной k
	int g = 0;//объявление переменной g
	for (int i = 0; i < M; i++) //процесс заполнения полученной матрицы
	{
		for (int j = 0; j < N; j++)
		{
			*(mt + N*k + g) = *(a + M*i + j);
			k--;
		}
		g++;
		k = M - 1;
	}
	for (int i = 0; i < N; i++) // процесс заполнения матрицы
	{
		for (int j = 0; j < M; j++)
		{
			printf("%3d", *(mt + i*N + j));
		}
		printf("\n");
	}
	return 0;
}
