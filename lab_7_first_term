#include <stdio.h>
#include <windows.h>
#include <conio.h>

int res(int);

int main()
{
	int i, j;
	system("chcp 1251>0");
	printf("Введите число:");
	scanf_s("%d", &i);
  j = res(i);
	printf("Итог:%d\n", j);
	_getch();
	return 0;
}
int res(int i)
{
	if (i == 0)
	{
		return 1;
	}
	else
	{
		return res(i) / 10;
	}
}
