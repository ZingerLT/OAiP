//11.В main ввести матрицу X[N][N]  (N≤5), элементы матрицы длинные целые числа. 
//В функции найти сумму нечетных элементов расположенных выше главной диагонали. 
//Результат вывести в main.
#include <stdio.h>
#include <stdlib.h>
#include <Windows.h> // подключение библиотек
#include <string.h>
#include<time.h>
void summ(int*,int); //объявление прототипа функции
int main()
{
	system("chcp 1251>0"); // подключение русского языка в консоль
	int N;
	printf("Введите значение N:");// вывод строки в консоль
	scanf_s("%d", &N);// считывание данных и закидывание их в N
	int *A;
	A = (int*)malloc(N*N * sizeof(int));//динамическое выделение памяти
	int i, j;
	int count = 0;
	for (i = 0; i < N; i++)// заполнение первоначальной матрицы
	{
		for (j = 0; j < N; j++)
		{
			count++;// числа последовательные будут
			*(A + N*i + j) = count;
			printf("%4d", *(A + N*i + j));// вывод матрицы в консоль и растояние между элементами 4
		}
		printf("\n");
	} 
     summ(A, N);//выполнение фукнкции
}
void summ(int *A,int N)
{
	int sum = 0;//объявление пеерменных
	int i,j;
	for (i = 0; i < N; i++)//строки
	{
		for (j = 0; j < N; j++)//столбцы
		{
			if (*(A + N*i + j) % 2 != 0 && j > i)// если процент от деления на 2 не равен нулю ⇒ число нечетное и заноситься в sum
			{
				sum += *(A + N*i + j);
			}
		}
	}
	printf("Сумма:%d\n", sum);
}
