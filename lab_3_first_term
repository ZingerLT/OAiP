//Дана вещественная матрицаразмером 5х5, все элемеенты которой различны.
//Найти скалярного произведения строки,в которой находится наибольший элемент матрицы на столбец с наименьшим элементом.
#include <stdio.h>
#include <stdlib.h>        // подключение необходимых библиотек
#include <locale.h>
#include <time.h>
int main()
{
	srand(time(NULL));
	setlocale(LC_ALL, "Russian");    // установка русского языка в консоли
	int a[5][5], i, j, max, min, d, t, g;    //объявление переменных
	long long pr; // объявление в ответе длинного двойного числа со знаком
	for (i = 0; i<5; i++) // ввод матрицы а
	{
		for (j = 0; j<5; j++)
		{
			a[i][j] = rand() % 100 - 50; // заполнение матрицы рандомными числами
			printf("\n"); 
			system("CLS"); // очистка консоли
		}
	}
	printf("Матрица:\n "); // вывод матрицы в консоль 
	for (i = 0; i<5; i++) 
	{
		for (j = 0; j<5; j++)
		{
			printf("%10d", a[i][j]); // расстояние между элементами 10 
		}
		printf("\n");
	}
	max = a[0][0]; // нахождение максимального значения в матрице
	min = a[0][0]; // нахождение минимального значения в матрице
	for (i = 0; i<5; i++)
	{
		for (j = 0; j<5; j++)
		{
			if (a[i][j]>max) // нахождение максимального значения в матрице
			{
				max = a[i][j];
				d = i; // d-строка с max элементом матрицы
			}
			if (a[i][j]<min) // нахождение минимального значения в матрице
			{
				min = a[i][j];
				t=j; // t - строка c min элементом
			}
		}

	}
	printf("Максимальный элемент массива равен: %d\n", max);// вывод max элемента в консоль
	printf("Минимальный элемент массива равен: %d\n", min); // вывод min элемента в консоль
	i = d;
	j = t;
	pr = 0;
	for (int n = 0; n < 5; n++) //  нахождение скалярного произведения 
	{
		g = a[d][n] * a[n][t];
		pr = pr + g;
	}
	printf("Cкалярное произведение строки max элемента на столбец min: %lli\n", pr); // вывод скалярного произведения строки,в которой находится наибольший элемент матрицы на столбец с наименьшим элементом в консоль
	return 0;
}
